<Window x:Class="SecurityProgram.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Security Program"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!--Whole Layout-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!--Main Layout-->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinition>

        <Border Grid.Column="0" BackGround="#1E1E2D">
            <StackPanel>

                <!--App Title-->
                <TextBlock Text = "SecurityProgram"
                           Foreground = "White"
                           FontSize = "20"
                           FontWeight = "Bold"
                           Margin = "20,30,20,30" />

                <!--Menu Buttons-->
                <Button Content = "파일 암호화"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
                <Button Content = "이벤트 로그"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
                <Button Content = "비밀번호 분석"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
                <Button Content = "로컬 네트워크 포트"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
                <Button Content = "보고서 생성"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
            </StackPanel>
        </Border>
        <Border Grid.Column = "1"
                Background = "#F5F5F7"
                Padding = "20" >
            <!--Add User Control -->
            <ContentControl />
        </Border>
    </Grid>
</Window>
            