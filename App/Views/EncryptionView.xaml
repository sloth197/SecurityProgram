<UserControl x:Class="SecurityProgram.App.Views.EncryptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:SecurityProgram.App.Behaviors">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBook Text = "파일 암호화 및 복호화"
                  FontSize = "24"
                  FontWeight = "Bold"
                  HorizontalAlignment = "Center"
                  VerticalAlignment = "Center" />
        
        <!--Main Section-->
        <Border Grid.Row = "1"
            Background = "White"
            Padding = "20"
            CornerRadius = "8">

            <StackPanel>
                <!--Select File-->
                <TextBlock Text = "대상 파일"
                           FontWeight = "SemiBold" />
                <DockPanel Margin = "0,5,0,15">
                    <TextBox Text = "{Binding SelectedFilePath}"
                             IsReadOnly = "True"
                             Height = "32"
                             VerticalContentAlignment = "Center" />
                    <Button Content "찾기"
                             Width = "80"
                             Margin = "10,0,0,0"
                             Command = "{Binding BrowseFileCommand}" />
                </DockPanel>

                <!--Password-->
                <TextBlock Text = "비밀번호"
                           FontWeight = "SemiBold" />
                <PasswordBox Height = "32"
                             Margin = "0,5,0,20"
                             behaviors:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />

                <!-- User Info Message-->
                <TextBlock Text = "인간적으로 보안 강도는 중간이어야함다"
                           FontSize = "11"
                           Foreground = "DarkRed"
                           Visibility = "{Binding CanEncrypt,
                                          Converter = {StaticResource BooleanToVisibilityConverter},
                                          ConverterParameter = invert}" />
                
                <!--Password Intensity-->
                <ProgressBar Minimum = "0"
                             Maximum = "100"
                             Heigth = "18"
                             Value = "{Binding PasswordScore}"
                             Margin = "0,5,0,5" />
                <TextBlock Text = "{Binding PasswordLevel}"
                           FontWeight = "SemiBold"
                           Foreground = "DarkGray"
                           Margin = "0,0,0,15" />
            
                <!--Button-->
                <StackPanel Orientation = "Horizontal"
                            HorizontalAlignment = "Left">
                     <!--암호화 버튼-->       
                    <Button Content = "암호화"
                            Width = "120"
                            Height = "40"
                            Margin = "0,0,10,0"
                            IsEnabled = "{Binding CanEncrypt}"
                            Command = "{Binding EncryptCommand}" /> 

                    <!--복호화 버튼-->
                    <Button Content = "복호화"
                            Width = "120"
                            Height = "40"
                            Margin = "0,0,10,0"
                            IsEnabled = "{Binding CanEncrypt}"                     Command = "{Binding DecryptCommand}" />
                </StackPanel>

                <!--Status Message-->
                <TextBlock Text = "{Binding StatusMessage}"
                           Foreground = "Gray"
                           Margin = "0,20,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
<!--DataContext -> WPF(Auto) -> EncryptionViewModel -->