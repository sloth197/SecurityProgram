<Window x:Class="SecurityProgram.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Security Program"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <!-- NN ViewModel -> View Auto Matching-->
    <Window.Resources>
        <DataTemplate DataType = "{x:Type vm:EncryptionViewModel}">
            <view:EncryptionView />
        </DataTemplate>
        <DataTemplate DataType = "{x:Type vm:EventLogViewModel}">
            <view:EventLogView />
        </DataTemplate>
        <DataTemplate DataType = "{x:Type vm:PasswordViewModel}">
            <view:PasswordView />
        </DataTemplate>
        <DataTemplate DataType = "{x:Type vm:NetworkViewModel}">
            <view:NetworkView />
        </DataTemplate>
        <DataTemplate DataType = "{x:Type vm:ReportViewModel}">
            <view:ReportView />
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <!--Whole Layout-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!--Main Layout-->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinition>

        <!--Left Layout-->
        <Border Grid.Column="0" BackGround="#1E1E2D">
            <StackPanel>

                <!--App Title-->
                <TextBlock Text = "SecurityProgram"
                           Foreground = "White"
                           FontSize = "20"
                           FontWeight = "Bold"
                           Margin = "20,30,20,30" />

                <!--Menu Buttons-->
                <Button Content = "파일 암호화"
                        Command = "{Binding ShowEncryptionCommand}"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>

                <Button Content = "이벤트 로그"
                        Command = "{Binding ShowEventLogCommand}"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>

                <Button Content = "비밀번호 분석"
                        Command = "{Binding ShowPasswordCommand}"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>

                <Button Content = "로컬 네트워크 포트"
                        Command = "{Binding ShowNetworkCommand}"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>

                <Button Content = "보고서 생성"
                        Command = "{Binding ShowReportCommand}"
                        Height = "45"
                        Margin = "10"
                        Foreground = "white"/>
            </StackPanel>
        </Border>

        <!--Right Layout-->
        <Border Grid.Column = "1"
                Background = "#F5F5F7"
                Padding = "20" >
            <!--Add User Control -->
            <ContentControl Content = "{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>
            